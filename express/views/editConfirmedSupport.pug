extends layout

block content
  include common/navbar.pug
  +navbar(user)
  .container
    if success
      h4.bg-success.p-3.c-white.mt-3 #{success}
    .row
      .col-lg-12.mt-3.mx-auto
        form(action="/editConfirmSupport",method="POST").text-center.border.border-light.p-5.rounded.bg-blue
            p.h1.mb-4 Support Form
            .row
                .col-lg-6.mt-3
                    p.m-0.p-0 Name
                    input(type="text",name="name",placeholder="Name*",required=true,value=support.name,readonly).form-control.mb-4
                    input(type="text",name="id",placeholder="",required=true,value=support.id,readonly).form-control.mb-4.d-none
                    p.m-0.p-0 Surname
                    input(type="text",name="surname",placeholder="Surname*",required=true,value=support.surname,readonly).form-control.mb-4
                    p.m-0.p-0 Support Type
                    input(type="text",name="supportType",placeholder="Support Type*",required=true,value=support.supportType,readonly).form-control.mb-4
                    p.m-0.p-0 Amount
                    input(type="number",name="amount",placeholder="",required=true,value=support.amount,readonly).form-control.mb-4
                    p.m-0.p-0 Send Type
                    input(type="text",name="sendType",placeholder="",required=true,value=support.sendType,readonly).form-control.mb-4
                .col-lg-6.mt-3
                    p.m-0.p-0 Phone
                    input(type="number",name="phone",placeholder="",required=true,value=support.phone,readonly).form-control.mb-4
                    p.m-0.p-0 Address
                    input(type="text",name="address",placeholder="Adres*",required=true,value=support.address,readonly).form-control.mb-4
                    p.m-0.p-0 Approver Name Surname
                    input(type="text",name="NameSurname",placeholder="",required=true,value=user.firstname + " " + user.lastname,readonly).form-control.mb-4
                    input(type="text",name="confirmName",placeholder="",required=true,value=user.firstname,readonly).form-control.mb-4.d-none
                    input(type="text",name="confirmSurname",placeholder="",required=true,value=user.lastname,readonly).form-control.mb-4.d-none
                    p.m-0.p-0 Approver NGO
                    input(type="text",name="confirmSTK",placeholder="",required=true,value=user.stk,readonly).form-control.mb-4
                    p.m-0.p-0 Status*
                    select(name="status",required=true).browser-default.custom-select.mb-4
                        option(selected).d-none
                        option(value="Approved") Approved
                        option(value="Pending") Pending
                        option(value="Used") Used
            button(type="submit").btn.btn-success.btn-block.mt-3.w-50.mx-auto Approve
            a(href="/support/" + support.id +"/delete").btn.btn-danger.btn-block.mt-3.w-50.mx-auto Delete
  script(src='/js/myscripts.js')    